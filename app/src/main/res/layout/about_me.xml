<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/logo"
            android:id="@+id/imageView4"
            android:adjustViewBounds="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                app:srcCompat="@drawable/bagas"
                android:id="@+id/imageView2"
                android:layout_height="wrap_content"
                android:scaleType="fitStart"
                android:adjustViewBounds="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:gravity="right">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="top|right"
                    android:background="@android:color/white">

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                app:srcCompat="@drawable/logo_uniku"
                android:id="@+id/imageView3"
                android:layout_weight="1"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="false"
                android:layout_height="96dp"
                android:adjustViewBounds="true" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:text="Dede Bagas Saputra"
                    android:layout_width="match_parent"
                    android:id="@+id/textView2"
                    android:layout_weight="1"
                    android:gravity="center_vertical|fill_vertical|center_horizontal"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/textView"
                    android:layout_weight="1"
                    android:gravity="center_vertical|fill_vertical|center_horizontal"
                    android:text="2012081035"
                    android:layout_height="match_parent" />

                <TextView
                    android:text="Teknik Informatika"
                    android:layout_width="match_parent"
                    android:id="@+id/textView5"
                    android:layout_weight="1"
                    android:gravity="center_vertical|fill_vertical|center_horizontal"
                    android:layout_height="match_parent" />

                <TextView
                    android:text="Fakultas Ilmu Komputer"
                    android:layout_width="match_parent"
                    android:id="@+id/textView6"
                    android:layout_weight="1"
                    android:gravity="center_vertical|fill_vertical|center_horizontal"
                    android:textSize="14sp"
                    android:layout_height="match_parent" />

                <TextView
                    android:text="Universitas Kuningan"
                    android:layout_width="match_parent"
                    android:id="@+id/textView7"
                    android:layout_weight="1"
                    android:gravity="center_vertical|fill_vertical|center_horizontal"
                    android:textSize="14sp"
                    android:layout_height="match_parent" />

                <TextView
                    android:text="Â© 2016"
                    android:layout_width="match_parent"
                    android:id="@+id/textView8"
                    android:layout_weight="1"
                    android:gravity="center_vertical|fill_vertical|center_horizontal"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>